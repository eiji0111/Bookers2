<div class="container px-5 px-sm-0">
  <%= render 'books/error', book: @book %>
  <div class="row">
    <%= render 'books/user_info', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th scope="col" style="width:10%"></th>
            <th scope="col" style="width:30%">Title</th>
            <th scope="col" style="width:60%">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>